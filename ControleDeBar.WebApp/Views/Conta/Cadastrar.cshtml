@{
    ViewBag.Titulo = "Cadastro de Conta";
}

@model CadastrarContaViewModel;


<div class="row justify-content-center">
    <form class="col-6" asp-action="Cadastrar" method="post">
        <div class="mb-3">
            <label asp-for="Titular" class="form-label">Titular:</label>
            <input class="form-control" asp-for="Titular">
            <span asp-validation-for="Titular" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="MesaId" class="form-label">Mesa:</label>
            <select class="form-select" name="MesaId"
                        <option selected>Selectione uma opção</option>
                        @foreach (SelecionarMesaViewModel e in Model.MesasDisponiveis)
                        {
                         <option value="@e.Id">@e.Numero</option>
                        }
                    </select>
        </div>
        <div class="mb-3">
            <label asp-for="GarcomId" class="form-label">Garçom:</label>
            <select class="form-select" name="GarcomId"
                        <option selected>Selectione uma opção</option>
                        @foreach (SelecionarGarcomViewModel e in Model.GarconsDisponiveis)
                        {
                                    <option value="@e.Id">@e.Nome</option>
                        }
                    </select>
        </div>
        <div class="d-flex gap-2 justify-content-end">
            <a asp-action="Index" class="btn btn-outline-primary px-5">Voltar</a>
            <button class="btn btn-primary px-5">Gravar</button>
        </div>
    </form>
</div>